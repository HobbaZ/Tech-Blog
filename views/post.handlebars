<div class="text-center post">
  <h2 class="postTitle">{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <hr>
  
  <!--add comment to post area-->
    <form class="form-inline new-comment">
      <div class="form-group">
        <label for="comment-add"></label>
        <textarea class="form-control" type="text" id="comment-add" name="comment-add" placeholder="Add your comment"></textarea>
      </div>
        <button type="submit" class="btn btn-primary">Add Comment</button>
        <p>{{comments.length}} comments</p>
      </form>
      
<!-- Loop through comments-->
  {{#each post.comments as |comment| }}
<div class="row mb-4 comment">
  <div class="col-md-5">
    <p>{{comment.commentdesc}}</p>
    <p>{{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>

</div>
{{/each}}

<!--Add length of comment array to post-->
{{#if comments.length}}
<p>{{comments.length}} comments</p>
{{/if}}

</div>